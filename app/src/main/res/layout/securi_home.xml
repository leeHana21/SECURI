<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@drawable/border">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/welcomeTxt"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:text="Hi I'm your security"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/popup_border"
                android:text="로 그 인"
                android:textColor="#ffffff"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/joinState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="zzz"
                android:visibility="gone"/>
        </LinearLayout>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/securi"/>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Now operational info"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/border">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/lock"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:stretchColumns="1"
            android:layout_marginLeft="10dp">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 문 상태"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/doorState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="잠금 중"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카 메 라"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/camState"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="ON"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감지 센서"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/sensorState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ON"
                    android:textSize="20dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Door Control"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/streaming"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/outInfo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:text="실시간 외부 상황\n스트리밍"
            android:textSize="20dp"
            android:layout_margin="5dp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/dooropen" />

            <Button
                android:id="@+id/autoOpen"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:text="출입문\n원격 조정"
                android:textSize="20dp"
                android:layout_margin="5dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
